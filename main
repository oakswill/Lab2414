#include <xc.h>
#include <inttypes.h>
#include "porta_in.h"
#include "portb_out.h"
#pragma config FNOSC = FRCPLL, POSCMOD = OFF
#pragma config FPLLIDIV = DIV_2, FPLLMUL = MUL_20
#pragma config FPBDIV = DIV_1, FPLLODIV = DIV_2
#pragma config FWDTEN = OFF, JTAGEN = OFF, FSOSCEN = OFF

main() {
 uint8_t in;
 uint16_t out;
 porta_in_init();
 portb_out_init();
 while (1) {
 in = porta_in_read();
 
  out = 0x0001;
  int i;

  for(i = in&0x000F; i >1 ; i--) {
      out = out << 1;
  }
  if(in>=0x10){
      out = ~out;
  }
 /**
 if(in < 0x10 ){
     out = 0x0001;
     int i = 0;
      
     for(i = 1; i < in&0x000F; i++) {
         out = out << 1;
     
     }
     
 
 } //out = ((in & 0x000F))  ;
     
 
// out = ~(in & 0x000F);
 else {
  out = 0x0001;
     int i = 0;
      
     for(i = 1; i < in&0x000F; i++) {
         out = out >> 1;
     
     }
     out=~out;
 }//out = (~(in&0x000F));
  * **/
 
 portb_out_write(out);
 }
}
